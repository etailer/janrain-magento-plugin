<?xml version="1.0"?>

<config>
    <modules>
        <Janrain_Engage>
            <version>1.2.0</version>
        </Janrain_Engage>
    </modules>
    <frontend>
        <secure_url>
            <engage>/janrain-engage/rpx/</engage>
        </secure_url>
        <layout>
            <updates>
                <engage>
                    <file>engage.xml</file>
                </engage>
            </updates>
        </layout>
        <translate>
            <modules>
                <Janrain_Engage>
                    <files>
                        <default>Janrain_Engage.csv</default>
                    </files>
                </Janrain_Engage>
            </modules>
        </translate>
        <routers>
            <engage>
                <use>standard</use>
                <args>
                    <module>Janrain_Engage</module>
                    <frontName>janrain-engage</frontName>
                </args>
            </engage>
        </routers>
    </frontend>

    <global>
        <blocks>
            <engage>
                <class>Janrain_Engage_Block</class>
            </engage>
        </blocks>
        <events>
            <admin_system_config_changed_section_engage>
                <observers>
                    <engage_config_save>
                        <type>singleton</type>
                        <class>Janrain_Engage_Model_Observer</class>
                        <method>onConfigSave</method>
                    </engage_config_save>
                </observers>
            </admin_system_config_changed_section_engage>
        </events>
        <helpers>
            <engage>
                <class>Janrain_Engage_Helper</class>
            </engage>
        </helpers>
    </global>

    <admin>
        <routers>
            <engageadmin>
                <use>admin</use>
                <args>
                    <module>Janrain_Engage</module>
                    <frontName>janrain-engage-admin</frontName>
                </args>
            </engageadmin>
        </routers>
    </admin>

    <adminhtml>
        <translate>
            <modules>
                <Janrain_Engage>
                    <files>
                        <default>Janrain_Engage.csv</default>
                    </files>
                </Janrain_Engage>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <engage translate="title" module="engage">
                                            <title>engage</title>
                                        </engage>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <engage>
            <options>
                <apikey></apikey>
                <enable>1</enable>
                <seamless>0</seamless>
                <path_skin>{{base_skin}}/frontend/janrain</path_skin>
            </options>

			<!-- Set values of global config vars -->
            <vars>
                <realm></realm>
                <realmscheme></realmscheme>
                <appid></appid>
                <adminurl></adminurl>
                <socialpub></socialpub>
            </vars>
        </engage>
    </default>

</config>
