<?xml version="1.0"?>

<layout version="0.1.0">
	<default>
		<!-- <reference name="before_body_end">
			<block type="core/template"
            name="janrain_engage_scripts"
            template="janrain/engage/scripts.phtml"/>
		</reference> -->
		<reference name="head">
			<block type="core/template"
            name="janrain_engage_styles"
            template="janrain/engage/styles.phtml"/>
		</reference>
	</default>

	<cms_page_view>
		<reference name="content">
			<block type="core/template"
            name="janrain_engage"
            after="-"
            template="janrain/engage/activity.phtml"/>
		</reference>
	</cms_page_view>

	<engage_rpx_authenticate>
		<label>Customer Account Registration Form</label>
        <!-- Mage_Customer -->
		<remove name="right"/>
		<remove name="left"/>

		<reference name="root">
			<action method="setTemplate">
				<template>page/1column.phtml</template>
			</action>
		</reference>
		<reference name="content">
			<block type="customer/form_register" name="customer_form_register" template="janrain/engage/register.phtml">
				<block type="page/html_wrapper" name="customer.form.register.fields.before" as="form_fields_before" translate="label">
					<label>Form Fields Before</label>
				</block>
			</block>
		</reference>
	</engage_rpx_authenticate>

	<engage_rpx_duplicate>
		<label>Customer Account Registration Form</label>
		 <!-- Mage_Customer -->
		<remove name="right"/>
		<remove name="left"/>

		<reference name="root">
			<action method="setTemplate">
				<template>page/1column.phtml</template>
			</action>
		</reference>
		<reference name="content">
			<block type="customer/form_register" name="customer_form_register" template="janrain/engage/duplicate.phtml">
				<block type="page/html_wrapper" name="customer.form.register.fields.before" as="form_fields_before" translate="label">
					<label>Form Fields Before</label>
				</block>
			</block>
		</reference>
	</engage_rpx_duplicate>

	<customer_account_login>
		<reference name="content">
			<block type="engage/auth" name="some_random_name">
					<action method="setSize"><size>large</size></action>
			</block>
		</reference>
	</customer_account_login>
</layout>