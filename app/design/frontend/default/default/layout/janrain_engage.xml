<layout version="0.1.0">
    <catalog_category_default>
        <reference name="content">
            <block type="core/template"
            name="janrain_engage"
            after="category.products"
            template="janrain/engage/list.phtml"/>
        </reference>
    </catalog_category_default>

    <catalog_category_layered>
        <reference name="content">
            <block type="core/template"
            name="janrain_engage"
            after="category.products"
            template="janrain/engage/list.phtml"/>
        </reference>
    </catalog_category_layered>

    <catalog_product_view>
        <reference name="content">
            <block type="core/template"
            name="janrain_engage"
            after="product.info"
            template="janrain/engage/list.phtml"/>
